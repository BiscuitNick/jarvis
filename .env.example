# ========================================
# Task Master AI - API Keys
# ========================================
# Required: At least one AI provider for Task Master
ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Recommended: For research features. Format: pplx-...
OPENAI_API_KEY="your_openai_api_key_here"             # Optional: Format: sk-proj-...
GOOGLE_API_KEY="your_google_api_key_here"             # Optional: For Google Gemini models
MISTRAL_API_KEY="your_mistral_key_here"               # Optional: For Mistral AI models
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional: For xAI AI models
GROQ_API_KEY="YOUR_GROQ_KEY_HERE"                     # Optional: For Groq models
OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY_HERE"         # Optional: For OpenRouter models
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional: For Azure OpenAI models
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers
GITHUB_API_KEY="your_github_api_key_here"             # Optional: For GitHub features. Format: ghp_...

# ========================================
# AWS Credentials & Infrastructure
# ========================================
# Required for AWS Lightsail deployment and AWS MCP server
AWS_ACCESS_KEY_ID="your_aws_access_key_id"            # Required: AWS IAM access key
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"    # Required: AWS IAM secret key
AWS_REGION="us-east-1"                                # AWS region for Lightsail and services

# ========================================
# Jarvis Application - Core Services
# ========================================

# Database Configuration
POSTGRES_DB="jarvis"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="CHANGE_ME_SECURE_PASSWORD"         # Required: Use strong password
DB_MASTER_PASSWORD="CHANGE_ME_DB_MASTER_PASSWORD"     # For Lightsail managed database

# Redis Configuration
REDIS_PASSWORD="CHANGE_ME_REDIS_PASSWORD"             # Required: Use strong password

# Security & Authentication
JWT_SECRET="CHANGE_ME_JWT_SECRET_MIN_32_CHARS"        # Required: Minimum 32 characters

# ========================================
# ASR (Automatic Speech Recognition)
# ========================================
# Required: At least one ASR provider
DEEPGRAM_API_KEY="your_deepgram_api_key_here"        # Primary: Deepgram API key
GOOGLE_CLOUD_CREDENTIALS="/path/to/credentials.json" # Optional: Path to Google Cloud credentials
AZURE_SPEECH_KEY="your_azure_speech_key"             # Optional: Azure Speech Services key
AZURE_SPEECH_REGION="eastus"                         # Optional: Azure region
PRIMARY_ASR_PROVIDER="deepgram"                      # Options: deepgram, google, azure

# ========================================
# LLM (Large Language Models)
# ========================================
# Required: At least one LLM provider (OpenAI, Anthropic, or Google)
# Note: OPENAI_API_KEY is already defined above for Task Master
# ANTHROPIC_API_KEY is already defined above for Task Master
PRIMARY_LLM_PROVIDER="openai"                        # Options: openai, anthropic, google
PRIMARY_LLM_MODEL="gpt-4o"                           # Model name for primary provider

# ========================================
# RAG (Retrieval Augmented Generation)
# ========================================
EMBEDDING_MODEL="text-embedding-ada-002"             # OpenAI embedding model
GITHUB_TOKEN="your_github_token_here"                # Optional: For knowledge ingestion
KNOWLEDGE_REFRESH_INTERVAL="180000"                  # Refresh interval in ms (3 minutes)

# ========================================
# TTS (Text-to-Speech)
# ========================================
# Optional: At least one TTS provider recommended
PRIMARY_TTS_PROVIDER="google"                        # Options: google, azure, aws
# GOOGLE_CLOUD_CREDENTIALS already defined above
# AZURE_SPEECH_KEY already defined above
# AWS credentials already defined above

# ========================================
# Application Configuration
# ========================================
NODE_ENV="production"                                # Options: development, production
LOG_LEVEL="info"                                     # Options: debug, info, warn, error

# Service Ports
INGRESS_PORT="3000"
ASR_PORT="3001"
RAG_PORT="3002"
LLM_PORT="3003"
TTS_PORT="3004"

# LLM Router Configuration
MAX_QUERY_TIMEOUT="10000"                            # Maximum query timeout in ms (10 seconds)
MAX_PLANNING_STEPS="2"                               # Maximum planning steps

# ========================================
# SSL & Domain Configuration
# ========================================
DOMAIN_NAME="your-domain.com"                        # Your domain name
SSL_EMAIL="admin@your-domain.com"                    # Email for SSL certificate

# ========================================
# Deployment Configuration
# ========================================
LIGHTSAIL_SSH_KEY="path/to/lightsail-key.pem"       # Path to SSH private key
LIGHTSAIL_HOST="your.instance.ip.address"           # Lightsail instance IP
LIGHTSAIL_USER="ubuntu"                              # SSH user (default: ubuntu)
DEPLOYMENT_PATH="/opt/jarvis"                        # Deployment path on server