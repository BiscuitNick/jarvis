# Environment Configuration
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration
POSTGRES_DB=jarvis
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Database Connection Pool Configuration (demo-scale defaults)
PGPOOL_MAX_INGRESS=5
PGPOOL_MAX_RAG=10
PGPOOL_MAX_LLM=4
PG_CONN_TIMEOUT_MS=2000
PG_IDLE_TIMEOUT_MS=10000
PG_CONNECT_RETRIES=3

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# Security
JWT_SECRET=CHANGE_ME_JWT_SECRET_MIN_32_CHARS

# Service Ports
INGRESS_PORT=3000
ASR_PORT=3001
RAG_PORT=3002
LLM_PORT=3003
TTS_PORT=3004

# ASR Provider Configuration
DEEPGRAM_API_KEY=your_deepgram_api_key_here
GOOGLE_CLOUD_CREDENTIALS=/path/to/google-credentials.json
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=eastus
PRIMARY_ASR_PROVIDER=aws

# ASR Gateway Connection Pool Configuration
MAX_CONNECTIONS=100
HEARTBEAT_INTERVAL=30000
BUFFER_SIZE=32768
MAX_PROVIDER_POOL_SIZE=10
MIN_PROVIDER_POOL_SIZE=2

# ASR Gateway Transcription Processing Configuration
MIN_CONFIDENCE_THRESHOLD=0.5
AGGREGATION_WINDOW_MS=500
MAX_PARTIAL_HISTORY=10
ENABLE_WORD_TIMESTAMPS=true

# LLM Provider Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
PRIMARY_LLM_PROVIDER=openai
PRIMARY_LLM_MODEL=gpt-4o

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-ada-002

# TTS Provider Configuration
PRIMARY_TTS_PROVIDER=google
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# RAG Configuration
GITHUB_TOKEN=your_github_token_for_knowledge_ingestion
KNOWLEDGE_REFRESH_INTERVAL=180000

# LLM Router Configuration
MAX_QUERY_TIMEOUT=10000
MAX_PLANNING_STEPS=2

# SSL/Domain Configuration
DOMAIN_NAME=your-domain.com
SSL_EMAIL=admin@your-domain.com
